{
  "name": "redirect-watch",
  "version": "1.0.0",
  "description": "Shopify embedded app for 404 tracking and redirect management",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --no-lint",
    "start": "next start",
    "db:push": "drizzle-kit push",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:ci": "npm run typecheck && npm run lint && next build"
  },
  "dependencies": {
    "@shopify/app-bridge": "^3",
    "@shopify/polaris": "latest",
    "chart.js": "^4.5.0",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "drizzle-orm": "latest",
    "jose": "^5.9.0",
    "next": "^15.5.3",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.0",
    "typescript": "5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
